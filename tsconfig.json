{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/__mock__",
    "src/__tests__",
    "src/utils/",
    "src/lib/*.stories.js",
    "src/setupTests.js"
  ]
}
